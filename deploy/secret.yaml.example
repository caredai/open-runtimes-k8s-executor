apiVersion: v1
kind: Secret
metadata:
  name: appwrite-executor-secret
  namespace: appwrite
  labels:
    app: appwrite-executor
type: Opaque
stringData:
  # Executor secret key for API authentication
  # Generate a secure random key: openssl rand -hex 32
  OPR_EXECUTOR_SECRET: "your-secret-key-here"
  # S3 configuration
  S3_ENDPOINT: "https://s3.amazonaws.com"
  S3_BUCKET: "your-bucket-name"
  S3_ACCESS_KEY_ID: "your-access-key-id"
  S3_SECRET_ACCESS_KEY: "your-secret-access-key"
